[user]
	name = gcaprio
	email = me@griffincaprio.com

[core]
	excludesfile = ~/.gitignore_global
	quotepath = false
  pager = delta

[alias]
  ci = commit
  st = status
  co = checkout
  br = branch
  d = diff

[pull]
  ff = only

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
 
[commit]
  verbose = true

[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/

[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
  line-numbers = true
  side-by-side = true

[interactive]
  diffFilter = delta --color-only
[init]
	defaultBranch = main
